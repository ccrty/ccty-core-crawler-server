<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccty.noah.domain.mapper.UserMapper">

    <!-- 获取所有用户uid -->
    <select id="findAllUserUid" resultType="java.lang.Integer">
        select uid from ccty_user where is_deleted = 0
    </select>

    <insert id="insertUsers" parameterType="com.ccty.noah.domain.database.UserDO">
        insert into ccty_user (uid,username,picture_url,source,creator) values
        <foreach collection="list" item="user" separator=",">
            (
            #{user.uid},#{user.username},#{user.pictureUrl},#{user.userSource},#{user.uid}
            )
        </foreach>
    </insert>


</mapper>